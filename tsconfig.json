{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "ES6",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}